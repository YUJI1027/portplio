<h1>- 日々のメニューを記録しよう! -</h1>

<div class="button-container">
  <%= link_to "トレーニングの記録", new_task_path, class: "link-button" %>
</div>

<br>

<div class="button-container">
  <%= form_tag('/tasks', method: 'get') do %>
    <%= label_tag(:title_key, '絞り込み:') %>
    <%= text_field_tag(:title_key) %>
    <%= submit_tag('Seatch') %> <%= link_to 'リセット', tasks_path %>
  <% end %>
</div>

<br>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <h2><%= task.title %></h2>
      <p><%= task.content %></p>
      <span>
        <small><%= task.created_at %></small>
      </span>
      <div class="edit-delete-wrapper">
        <%= link_to "編集", edit_task_path(task), class: "link-button" %>
        <%= button_to "削除", task_path(task), method: :delete, 
        class: "link-delete-button" %>
      </div>
    </li>
  <% end %>
</ul>

<div class="button-container">
  <%= link_to "戻る", 'http://127.0.0.1:5500/rails_projects/hello/index.html', class: 'back-button' %>
</div>
